<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Admin.ForgotttenPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Forgot Password"
                    android:fontFamily="sans-serif-black"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:id="@+id/forgottxt"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/forgottxt"
                    android:layout_above="@+id/forgotPasswordprogressBar"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/text_box"
                        android:id="@+id/ForgotEmailET"
                        android:hint="Email"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go back, Login"
                        android:textColor="@color/black"
                        android:layout_gravity="end"
                        android:padding="8dp"
                        android:id="@+id/backET"/>


                </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:id="@+id/forgotPasswordprogressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:visibility="invisible"
                    android:layout_above="@+id/forgotBtn"/>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forgotBtn"
                    android:text="Forgot"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:minWidth="150dp"
                    android:background="@drawable/btn_background"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>





</RelativeLayout>